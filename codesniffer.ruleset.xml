<?xml version="1.0"?>
<ruleset name="searchpress">
	<description>Sniffs for the coding standards of the SearchPress plugin</description>

	<exclude-pattern>tests/*</exclude-pattern>
	<exclude-pattern>bin/*</exclude-pattern>
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>node_modules/*</exclude-pattern>

	<rule ref="WordPress-VIP"></rule>

	<!-- Tweak the VIP rules -->
	<rule ref="WordPress.VIP.RestrictedFunctions.get_term_by">
		<type>warning</type>
	</rule>
	<rule ref="WordPress.NamingConventions.ValidFunctionName.FunctionNameInvalid">
		<type>warning</type>
	</rule>
	<rule ref="WordPress.VIP.ValidatedSanitizedInput.MissingUnslash">
		<type>warning</type>
	</rule>

	<!-- Temporary downgrades, see https://github.com/alleyinteractive/searchpress/issues/85 -->
	<rule ref="Squiz.Commenting.LongConditionClosingComment.Missing">
		<type>warning</type>
	</rule>
	<rule ref="WordPress.Arrays.ArrayDeclarationSpacing.AssociativeKeyFound">
		<type>warning</type>
	</rule>
	<rule ref="WordPress.Arrays.ArrayDeclarationSpacing.AssociativeArrayFound">
		<type>warning</type>
	</rule>
	<rule ref="Generic.Functions.FunctionCallArgumentSpacing.TooMuchSpaceAfterComma">
		<type>warning</type>
	</rule>
	<rule ref="WordPress.VIP.RestrictedFunctions.get_term_by_get_term_by">
		<type>warning</type>
	</rule>
	<rule ref="Squiz.PHP.DisallowMultipleAssignments.Found">
		<type>warning</type>
	</rule>

</ruleset>
