{
  "name": "alleyinteractive/searchpress",
  "description": "Elasticsearch integration for WordPress.",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "plugin",
    "search",
    "searchpress",
    "faceted search",
    "performance"
  ],
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Alley Interactive",
      "email": "noreply@alley.co"
    }
  ],
  "require-dev": {
    "php": ">=7.4",
    "alleyinteractive/alley-coding-standards": "^0.3.0",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "scripts": {
    "phpcbf": "phpcbf .",
    "phpcs": "phpcs . --basepath=.",
    "phpstan": ["phpstan analyze --ansi --memory-limit=1G"],
    "phpunit": "phpunit",
    "setup": [
      "composer install"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "alleyinteractive/composer-wordpress-autoloader": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true
  }
}
